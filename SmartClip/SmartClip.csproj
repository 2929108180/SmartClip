<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <PublishReadyToRun>true</PublishReadyToRun>
    <AssemblyName>SmartClip</AssemblyName>
    <RootNamespace>SmartClip</RootNamespace>
    <!-- 开发时使用 uiAccess="false"，发布时脚本会替换为 uiAccess="true" 版本 -->
    <ApplicationManifest>app.manifest.dev</ApplicationManifest>
    <!-- 应用程序图标 -->
    <ApplicationIcon>SmartClip.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="WPF-UI" Version="4.1.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="SmartClip.ico" />
  </ItemGroup>

</Project>
